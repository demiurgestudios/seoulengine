#ifndef TEST_FX
#define TEST_FX

#include "Common/Common.fxh"

//////////////////////////////////////////////////////////////////////////////
// Uniform Constants
//////////////////////////////////////////////////////////////////////////////
float4 TestParameter : seoul_TestParameterPatchB;

///////////////////////////////////////////////////////////////////////////////
// Input/Output
///////////////////////////////////////////////////////////////////////////////
struct vsIn
{
	float4 Position : POSITION;
};

struct vsOut
{
	float4 Position : SEOUL_POSITION_OUT;
};

///////////////////////////////////////////////////////////////////////////////
// Vertex Shaders
///////////////////////////////////////////////////////////////////////////////
vsOut Vertex(vsIn input)
{
	vsOut ret;
	ret.Position = input.Position;
	return ret;
}

///////////////////////////////////////////////////////////////////////////////
// Fragment Shaders
///////////////////////////////////////////////////////////////////////////////
half4 Fragment(vsOut input) : SEOUL_FRAG0_OUT
{
	return half4(TestParameter);
}

///////////////////////////////////////////////////////////////////////////////
// Techniques
///////////////////////////////////////////////////////////////////////////////
SEOUL_TECHNIQUE(seoul_Test)
{
	pass
	{

		SEOUL_PS(Fragment);
		SEOUL_VS(Vertex);
	}
}

#endif // include guard
